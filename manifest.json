{
  "manifest_version": 3,
  "name": "Metabase - Chatgpt",
  "version": "1.0",
  "description": "Add helper features to Metabase through requests to the Chatgpt API",
  "icons": {
    "128": "images/icon128.png",
    "48": "images/icon48.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "scripting",
    "storage",
    "webNavigation"
  ],
  "host_permissions": [
    "*://*/question*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["injectedScriptStoreUpdates.js", "dist/*", "images/*", "dist/images/*"],
      "matches": ["*://*/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
  